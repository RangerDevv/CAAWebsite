---
import backgroundImage from '../assets/background.mp4';
---

<div class="hero min-h-screen relative">
  <video autoplay muted loop class="brightness-75 w-full h-full object-cover absolute inset-0" >
    <source src={backgroundImage} />
  </video>
  <div class="absolute inset-0 bg-linear-to-b from-black/55 via-black/45 to-black/25"></div>
  <div class="relative hero-content text-center">
    <div class="max-w-3xl mx-auto px-6">
      <h1 class="mb-6 font-bold text-4xl md:text-6xl leading-tight bg-linear-to-r from-indigo-400 via-indigo-300 to-blue-400 text-transparent bg-clip-text">
        Central Asian American Community
      </h1>
      <p class="mb-8 text-lg md:text-2xl text-slate-300 font-medium">
        Salam, welcome to the server where culture, tradition, and community come together 
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="https://discord.gg/your-invite-link" target="_blank" rel="noopener noreferrer" class="cta-primary">
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z" />
          </svg>
          <span>Join Discord</span>
        </a>
        <a href="#features" class="cta-secondary">
          <span>Explore Features</span>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .cta-primary, .cta-secondary {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: .5rem;
    font-weight: 600;
    border-radius: .75rem;
    padding: .9rem 1.4rem;
    font-size: 1rem;
    letter-spacing: .015em;
    line-height: 1.2;
    text-decoration: none;
    transition: background .25s, box-shadow .25s, transform .25s;
    isolation: isolate;
  }
  .cta-primary {
    background: linear-gradient(135deg,var(--caa-accent) 0%,var(--caa-accent-hover) 100%);
    color: #fff;
    box-shadow: 0 4px 18px -2px rgba(88,101,242,.35);
  }
  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px -4px rgba(88,101,242,.45);
  }
  .cta-primary:active {
    transform: translateY(0);
    box-shadow: 0 3px 10px -2px rgba(88,101,242,.35);
  }
  .cta-secondary {
    background: var(--caa-surface-alt);
    color: var(--caa-text);
    border: 1px solid var(--caa-border);
  }
  .cta-secondary:hover { background: var(--caa-surface); color: #fff; }
  .cta-secondary:active { background: var(--caa-surface-alt); }
  .cta-secondary:focus-visible, .cta-primary:focus-visible { outline: 2px solid var(--caa-accent); outline-offset: 3px; }

  .cta-primary svg { flex-shrink: 0; }

  @media (max-width: 640px) {
    .cta-primary, .cta-secondary { width: 100%; justify-content: center; }
  }
</style>