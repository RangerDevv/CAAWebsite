---
import backgroundImage from '../assets/background.mp4';
---

<div
  class="hero min-h-screen"
>
  <div class="hero-overlay">
      <video autoplay muted loop class="brightness-75 w-full h-full object-cover transform z-[-1]" >
        <source src={backgroundImage}  />
      </video>
  </div>
  <div class="hero-content text-neutral-content text-center">
    <div class="max-w-xl">
      <h1 class="mb-5 text-5xl md:text-7xl font-bold">Central Asian American Community</h1>
      <p class="mb-5 text-2xl md:text-3xl">
        Salam! Welcome to the server where culture, tradition, and community come together.
      </p>
      <a href="https://discord.gg/your-invite-link" target="_blank" rel="noopener noreferrer" class="discord-button">
        <svg class="discord-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
        </svg>
        <span class="button-text">Join Our Discord</span>
        <span class="button-shine"></span>
      </a>
    </div>
  </div>
</div>

<style>
  .discord-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 32px;
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
    background: linear-gradient(135deg, #5865F2 0%, #7289DA 100%);
    border: none;
    border-radius: 10px;
    text-decoration: none;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(88, 101, 242, 0.4);
    cursor: pointer;
  }

  .discord-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s;
  }

  .discord-button:hover::before {
    left: 100%;
  }

  .discord-button:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 8px 30px rgba(88, 101, 242, 0.6),
                0 0 40px rgba(88, 101, 242, 0.3);
  }

  .discord-button:active {
    transform: translateY(-2px) scale(1.02);
  }

  .discord-icon {
    transition: transform 0.3s ease;
    z-index: 1;
  }

  .discord-button:hover .discord-icon {
    transform: rotate(15deg) scale(1.2);
    animation: wiggle 0.5s ease-in-out;
  }

  .button-text {
    position: relative;
    z-index: 1;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  @keyframes wiggle {
    0%, 100% { transform: rotate(15deg) scale(1.2); }
    25% { transform: rotate(-10deg) scale(1.2); }
    50% { transform: rotate(20deg) scale(1.2); }
    75% { transform: rotate(-5deg) scale(1.2); }
  }

  @media (max-width: 768px) {
    .discord-button {
      padding: 14px 30px;
      font-size: 1.1rem;
    }
  }
</style>