---
// Fetch news from News API
const API_KEY = import.meta.env.NEWS_API_KEY;
const response = await fetch(`https://newsapi.org/v2/everything?q=Central Asia&pageSize=4&apiKey=99960bcec787446a8562803e0f8bb9f6`);
const data = await response.json();
const articles = data.articles || [];
---

<div class="news-section">
  <div class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h2 class="text-5xl font-bold mb-4 text-gradient">Latest Central Asian News</h2>
      <p class="text-xl opacity-80">Stay updated with the latest stories from our region</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {articles.map((article: any) => (
        <div class="news-card bg-base-100 shadow-xl rounded-2xl overflow-hidden">
          {article.urlToImage && (
            <figure class="news-image-container">
              <img 
                src={article.urlToImage} 
                alt={article.title}
                class="news-image"
              />
              <div class="image-overlay"></div>
            </figure>
          )}
          <div class="card-body p-6">
            <h3 class="card-title text-base font-bold line-clamp-2 mb-3">
              {article.title}
            </h3>
            <p class="text-sm opacity-70 line-clamp-3 mb-4">
              {article.description}
            </p>
            <div class="card-actions justify-end mt-auto">
              <a 
                href={article.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="read-more-btn"
              >
                <span>Read More</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .news-section {
    position: relative;
    padding: 3rem 0;
  }

  .text-gradient {
    background: linear-gradient(135deg, #e5e7eb 0%, #9aa5ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .news-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: var(--caa-surface);
    border: 1px solid var(--caa-border);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .news-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .news-image-container {
    position: relative;
    overflow: hidden;
    height: 200px;
  }

  .news-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .news-card:hover .news-image {
    transform: scale(1.1);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.3) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .news-card:hover .image-overlay {
    opacity: 1;
  }

  .card-body {
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .card-title {
    color: var(--caa-text);
    transition: color 0.3s ease;
  }

  .news-card:hover .card-title {
    color: var(--caa-accent);
  }

  .read-more-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.55rem 1.1rem;
    background: linear-gradient(135deg, var(--caa-accent) 0%, var(--caa-accent-hover) 100%);
    color: #fff;
    border-radius: 0.55rem;
    font-weight: 600;
    font-size: 0.9rem;
    letter-spacing: .015em;
    text-decoration: none;
    transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 16px -2px rgba(88, 101, 242, 0.4);
  }

  .read-more-btn:hover {
    transform: translateX(4px);
    box-shadow: 0 6px 20px rgba(88, 101, 242, 0.4);
  }

  .read-more-btn svg {
    transition: transform 0.3s ease;
  }

  .read-more-btn:hover svg {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .text-gradient { font-size: 2.25rem; }
  }
</style>