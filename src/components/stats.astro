---
// Community testimonials section
const testimonials = [
  {
    name: "Aziz K.",
    role: "Member since 2025",
    quote: "I finally found a space where I can be myself and connect with people who get my cultural background. Best decision ever!",
    avatar: "üé®"
  },
  {
    name: "Heaven T.",
    role: "Active Contributor",
    quote: "From game nights to deep conversations about our heritage - this server has it all. The community is genuinely welcoming.",
    avatar: "üéÆ"
  },
  {
    name: "Mushtariy M.",
    role: "Member since 2025",
    quote: "I've made lifelong friends here. We've even met up in person! This isn't just a Discord server, it's a real community.",
    avatar: "‚ú®"
  }
];
---

<div class="testimonials-section">
  <div class="container mx-auto px-6 py-20">
    <div class="text-center mb-16">
      <h2 class="text-5xl font-bold mb-4">What Our Members Say</h2>
      <p class="text-xl opacity-80">Real voices from our community</p>
    </div>

    <div class="testimonials-grid">
      {testimonials.map((testimonial) => (
        <div class="testimonial-card">
          <div class="quote-icon">‚ùù</div>
          <p class="testimonial-quote">{testimonial.quote}</p>
          <div class="testimonial-footer">
            <div class="avatar-circle">{testimonial.avatar}</div>
            <div class="testimonial-info">
              <div class="testimonial-name">{testimonial.name}</div>
              <div class="testimonial-role">{testimonial.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="community-stats-bar">
      <div class="stat-item">
        <div class="stat-value">1500+</div>
        <div class="stat-label">Members</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">15+</div>
        <div class="stat-label">Countries</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">24/7</div>
        <div class="stat-label">Active Chat</div>
      </div>
    </div>
  </div>
</div>

<style>
  .testimonials-section {
    padding: 4rem 0;
    position: relative;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto 4rem;
  }

  .testimonial-card {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.8);
    border-radius: 1.5rem;
    padding: 2rem;
    transition: all 0.4s ease;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .testimonial-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.15);
    border-color: rgba(88, 101, 242, 0.4);
  }

  .quote-icon {
    font-size: 4rem;
    color: rgba(88, 101, 242, 0.2);
    line-height: 1;
    margin-bottom: 1rem;
    font-family: Georgia, serif;
  }

  .testimonial-quote {
    font-size: 1.1rem;
    line-height: 1.7;
    color: rgba(44, 24, 16, 0.9);
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .testimonial-footer {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .avatar-circle {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #5865F2 0%, #7289DA 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    box-shadow: 0 4px 12px rgba(88, 101, 242, 0.3);
    transition: transform 0.3s ease;
  }

  .testimonial-card:hover .avatar-circle {
    transform: scale(1.1) rotate(10deg);
  }

  .testimonial-info {
    flex: 1;
  }

  .testimonial-name {
    font-weight: 700;
    font-size: 1.1rem;
    color: #2c1810;
  }

  .testimonial-role {
    font-size: 0.9rem;
    color: rgba(44, 24, 16, 0.6);
  }

  .community-stats-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    max-width: 900px;
    margin: 0 auto;
    padding: 2.5rem;
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.6);
    border-radius: 1.5rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .stat-item {
    text-align: center;
    transition: transform 0.3s ease;
  }

  .stat-item:hover {
    transform: scale(1.1);
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    color: #5865F2;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.95rem;
    color: rgba(44, 24, 16, 0.7);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
  }

  .stat-divider {
    width: 2px;
    height: 50px;
    background: linear-gradient(to bottom, transparent, rgba(88, 101, 242, 0.3), transparent);
  }

  @media (max-width: 768px) {
    .testimonials-section h2 {
      font-size: 2.5rem;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }

    .community-stats-bar {
      flex-wrap: wrap;
      gap: 2rem;
      padding: 2rem;
    }

    .stat-divider {
      display: none;
    }

    .stat-value {
      font-size: 2rem;
    }
  }
</style>